{
  "name": "welsh-tidy-mouse/binary-fetcher",
  "description": "PHP tool to fetch GitHub binaries for the current platform",
  "type": "library",
  "license": "WTFPL",
  "require": {
    "php": "^8.3",
    "ext-zip": "*",
    "symfony/http-client": "^7.0",
    "symfony/console": "^7.0",
    "symfony/filesystem": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.50",
    "phpmd/phpmd": "^2.14"
  },
  "autoload": {
    "psr-4": {
      "WelshTidyMouse\\BinaryFetcher\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BinaryFetcher\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests",
    "lint": "phpstan analyse src tests",
    "cs": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
    "md": "phpmd src,tests text phpmd.xml",
    "check": [
      "@cs",
      "@test",
      "@lint",
      "@md"
    ]
  },
  "bin": [
    "bin/binary-fetcher"
  ]
}
